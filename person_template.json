{
	"template" : "persons",
	"settings" : {
		"number_of_shards" : 3,
		"index" : {
			"ttl" : {
				"enabled" : false
			}
		}
	},
	"mappings" : {
		"person" : {
    	    "properties" : {
    	        "firstName" : {
    	        	"type" : "string", 
    	        	"index" : "not_analyzed" 
    	        },
    	        "lastName" : {
    	        	"type" : "string",
    	        	"index" : "not_analyzed"
    	        },
    	        "dob" : {
    	        	"type" : "date"
    	        },
    	        "phone" : {
   		         	"type" : "string",
    	        	"index" : "not_analyzed"
    	        },
    	        "email" : {
    	        	"type" : "string",
    	        	"index" : "not_analyzed"
    	        },
    	        "address" : {
    	        	"type" : "object",
    	        	"properties" : {
    	        		"departement" : {
    	        			"type" : "string",
    	        			"index" : "not_analyzed"
    	        		},
    	        		"postal_code" : {
    	        			"type" : "string",
    	        			"index" : "not_analyzed"
    	        		},
    	        		"commune" : {
    	        			"type" : "string",
    	        			"index" : "not_analyzed"
    	        		},
    	        		"street" : {
    	        			"type" : "string"
    	        		},
    	        		"location" : {
    	        			"type" : "geo_point",
    	        			"lat_lon" : true,
    	        			"geohash" : true,
    	        			"fielddata" : {
                    			"format" : "compressed",
                    			"precision" : "1cm"
                			}
    	        		}
    	        	}
    	        }
        	}
        }
    }
}
